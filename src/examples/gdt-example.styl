@import 'nib'

/*******************************************************************************
 * example3: Custom style 1
 ******************************************************************************/

.example3

  font-size 16px

  /* layout and size */

  .gdt-container

    /* hidden */
    fixed top -999px left -999px

  .gdt-container.visible

    /* visible */
    relative top auto left auto

  .gdt-box

    /* position */
    absolute top 2px left /* relative to container */
    width 450px

  .gdt-calendar
    display inline-block

  .gdt-time
    display inline-block
    margin-left 15px
    size 140px 220px
    overflow auto

  /* inner element align and sizing */

  .gdt-year
  .gdt-month
  .gdt-calendar
    text-align center

  .gdt-time
    text-align right

  ol
    margin 0
    padding 0

  li
    list-style none

  .gdt-year
    font-size 1.2em

    li
      padding 0 10px

      &.selected
        font-size 2.5em

  .gdt-month
    font-size .8em

    li
      padding 0 4px
      text-transform uppercase

      &.selected
        font-size 2em

  .gdt-year li
  .gdt-month li
    display inline-block
    vertical-align middle

  .gdt-time li
    padding 5px 25px 5px 15px
    font-size 1.2em

  .gdt-calendar table
    margin 0
    padding 0
    border-spacing 0

    th, td, td span
      size 35px 35px

    td span
      display inline-block
      line-height 35px
      border-radius 35px

  .gdt-close
  .gdt-year li
  .gdt-month li
  .gdt-calendar td
  .gdt-time li
    cursor pointer

  /* box */
  .gdt-box
    background-color #343434
    color #fff

    border solid 8px #fff
    border-radius 10px
    box-shadow 0 2px 10px rgba(0,0,0,.6)
    padding 15px

  /* close: black circle with an X, positioned top left */
  .gdt-close

    /* style */
    text-align center
    background-color #000
    color #fff
    border solid 3px #fff
    box-shadow 0 0 5px rgba(0,0,0,.8)
    cursor pointer

    /* size & shape */
    size 28px 28px
    border-radius 30px
    line-height 1

    /* position top left outside the box a little */
    absolute top -20px left -20px

    &:before /* close button x sign */
      content "\00D7"
      font-weight bold
      font-family Arial, sans-serif
      font-size 28px

    &:hover
      color #e84e40
      background-color #000

    &:active
      color #e51c23

  /* time */
  .gdt-time
    background-color #444
    border-width 0

  /* hover */
  .gdt-calendar td:hover span
  .gdt-time li:hover
    background-color #242424

  /* weekend */
  .gdt-calendar table td:nth-child(1)
  .gdt-calendar table td:nth-child(7)
    background-color #444

    &:hover span
      background-color #333

  /* outside */
  .gdt-year li.outside
  .gdt-month li.outside
  .gdt-calendar td.outside
  .gdt-calendar td.outside-month
  .gdt-time li.outside
    color #555

  /* selected */
  .gdt-year li.selected
  .gdt-month li.selected
  .gdt-calendar td.today
    color #03A9F4

  .gdt-calendar td.selected span
  .gdt-calendar td.selected:hover span
  .gdt-time li.selected
    background-color #03A9F4
    color #fff

