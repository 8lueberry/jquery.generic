  /* Custom */
  .calendar
    size 100px 100px
    border solid 1px #ccc
    display inline-block
    margin-top 10px

$clockSize = 100px
$hourSize = 3px
$minuteSize = 2px
$secondSize = 1px
$dotSize = 12px

  .clock
    relative top right
    size $clockSize $clockSize

    border solid 8px #ccc
    border-radius $clockSize
    background-color #fff

    &:after
      content ''
      absolute top 50% left 50%
      size $dotSize $dotSize
      margin (-($dotSize/2)) 0 0 (-($dotSize/2))
      background-color #666
      border-radius $dotSize

    .hour
      size 0 0
      absolute top 50% left 50%
      margin -30% (-($hourSize)) 0
      padding 30% $hourSize 0
      background-color #666
      border-radius $hourSize $hourSize 0 0
      transform-origin 50% 100%
      transition transform 1s ease-out

    .minute
      size 0 0
      absolute top 50% left 50%
      margin -40% (-($minuteSize)) 0
      padding 40% $minuteSize 0
      background-color #666
      border-radius $minuteSize $minuteSize 0 0
      transform-origin 50% 100%
      transition transform 1.2s ease-out

    .second
      size 0 0
      absolute top 50% left 50%
      margin -40% (-($secondSize)) 0
      padding 40% $secondSize 0
      background-color #f00
      transform-origin 50% 100%

