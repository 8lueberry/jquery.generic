body

  color #333
  font-style normal
  font-family "Myriad Set Pro","Lucida Grande","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif"
  font-size 18px
  line-height 1.45
  font-weight 400

  >div
    width 900px
    margin 0 auto 50px auto

    >div
      margin 5px 0 10px 10px

      >div
        margin 10px 0

hr
  width 900px
  margin 50px auto 100px auto

div.header
  margin 50px 0

  >.gb-container
    display block
    relative top left

    >.gb-box
      border solid 1px #ccc

      >.popup
        display block

        >h1
          font-size 72px
          margin 0
          padding 0

        >div
          text-align center

          >div
            text-align left

pre.prettyprint
  padding 10px
  font-size 14px

table
  border solid 1px #ccc
  margin 10px
  width 100%

  th, td
    text-align left
    vertical-align top
    font-weight none
    padding 5px
    border @border

  th
    width 30%

button
  font-size 18px
  border solid 1px #ccc
  border-radius 3px
  background-color #fff
  cursor pointer
  color #343434
  padding 3px 8px
  outline none

  &:active
    background linear-gradient(top, #5677fc, #455ede)
    border-color #2a36b1

select
  font-size 18px
  width 150px

div.log
  padding 5px
  font-size small
  overflow auto
  size 400px 250px
  background-color #f5f5f5
  margin 10px 0

div.examples
  >div
    margin 0 0 50px 0
    background #f5f5f5
    padding 20px

    >h2
      text-align center
